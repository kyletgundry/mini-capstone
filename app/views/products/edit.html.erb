<h1>Update Product:</h1>
<%= form_tag "/products/#{@product.id}", method: :patch do %>
<div class="form-group">
  Product Name: <input type="text" value="<%= @product.name %>" name="name">
</div>
<div class="form-group">
  Price: <input type="text" value="<%= @product.price %>" name="price">
</div>
<div class="form-group">
  Image: <input type="text" value="<%= @product.image %>" name="image">
</div>
<div class="form-group">
  Description: <input type="text" value="<%= @product.description %>" name="description">
</div>
<input class="btn btn-primary" class="form-control" type="submit" value="Update Product">
<% end %>

<a class="btn btn-primary" href="/products">Cancel</a>