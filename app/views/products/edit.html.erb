<h1>Update Product:</h1>
  <%= form_tag "/products/#{@product.id}", method: :patch do %>
    <div class="form-group">
      Product Name: <input type="text" value="<%= @product.name %>" name="name" class="form-control">
    </div>
    <div class="form-group">
      Price: <input type="text" value="<%= @product.price %>" name="price" class="form-control">
    </div>
    <div class="form-group">
      Image: <input type="text" value="<%= @product.image %>" name="image" class="form-control">
    </div>
    <div class="form-group">
      Description: <input type="text" value="<%= @product.description %>" name="description" class="form-control">
    </div>
    <input class="btn btn-default" class="form-control" type="submit" value="Update Product">
  <% end %>
<p></p>
<a class="btn btn-default" href="/products">Cancel</a>